<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="@drawable/shape_bg_bottom_sheet"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/select_region"
        android:textColor="@color/black_293040"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="15dp"
        android:id="@+id/tv_title" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"
        android:id="@+id/iv_close" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_label"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="省"
            android:textSize="16sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/black_293040"
            android:layout_weight="1"
            android:gravity="center"
            android:drawablePadding="12dp"
            android:paddingTop="15dp"
            android:id="@+id/tv_province"
            app:drawableBottomCompat="@drawable/shape_bottom_line" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="市"
            android:textSize="16sp"
            android:textColor="@color/gray_717787"
            android:layout_weight="1"
            android:visibility="invisible"
            android:gravity="center"
            android:drawablePadding="12dp"
            android:paddingTop="15dp"
            android:id="@+id/tv_city"
            app:drawableBottomCompat="@drawable/shape_bottom_invisible_line" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="区"
            android:visibility="invisible"
            android:textSize="16sp"
            android:textColor="@color/black_293040"
            android:layout_weight="1"
            android:gravity="center"
            android:drawablePadding="12dp"
            android:paddingTop="15dp"
            android:id="@+id/tv_area"
            app:drawableBottomCompat="@drawable/shape_bottom_invisible_line" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:id="@+id/rv_province"
        tools:listitem="@layout/adapter_area_item"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/ll_label"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:id="@+id/rv_city"
        android:visibility="gone"
        tools:listitem="@layout/adapter_area_item"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/ll_label"/>
</androidx.constraintlayout.widget.ConstraintLayout>
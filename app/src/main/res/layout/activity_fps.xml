<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_main_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/main_logo"
        android:layout_marginStart="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/iv_main_logo"
        app:layout_constraintBottom_toTopOf="@+id/v_bottom">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cl_journal_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_journal_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="40dp"
                android:text="@string/journal_default_hint"
                android:textColor="@color/gray_A1A6B3"
                android:textSize="14sp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_param_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_journal_content"
            android:layout_marginTop="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:paddingStart="16dp"
            android:text="@string/push_param"
            android:textSize="14sp"
            android:textColor="@color/gray_A1A6B3"
            android:background="@color/default_bg_color"
            tools:ignore="RtlSymmetry" />
        <ScrollView
            android:id="@+id/sv_param"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/tv_param_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_host"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/host"
                    android:textSize="16sp"
                    android:textColor="@color/black_293040"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    android:id="@+id/et_host"
                    android:layout_width="236dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="47.108.219.214"
                    android:gravity="end"
                    android:textColor="@color/gray_717787"
                    android:background="@null"
                    android:textSize="16sp"/>
                <View
                    android:id="@+id/v_host"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/et_host"/>
                <TextView
                    android:id="@+id/tv_port"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/port"
                    android:textSize="16sp"
                    android:textColor="@color/black_293040"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="@id/v_host"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    android:id="@+id/et_port"
                    android:layout_width="236dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_port"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:text="8443"
                    android:gravity="end"
                    android:textColor="@color/gray_717787"
                    android:background="@null"
                    android:textSize="16sp"/>
                <View
                    android:id="@+id/v_port"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/et_port"/>
                <TextView
                    android:id="@+id/tv_device_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/device_id"
                    android:textSize="16sp"
                    android:textColor="@color/black_293040"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="@id/v_port"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    android:id="@+id/et_device_id"
                    android:layout_width="236dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_device_id"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:text="huawei"
                    android:gravity="end"
                    android:textColor="@color/gray_717787"
                    android:background="@null"
                    android:textSize="16sp"/>
                <View
                    android:id="@+id/v_device_id"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/et_device_id"/>
                <TextView
                    android:id="@+id/tv_app_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/appId"
                    android:textSize="16sp"
                    android:textColor="@color/black_293040"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="@id/v_device_id"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/et_app_id"
                    android:layout_width="236dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_app_id"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:text="hulk4015d"
                    android:gravity="end"
                    android:textColor="@color/gray_717787"
                    android:background="@null"
                    android:textSize="16sp"/>
                <View
                    android:id="@+id/v_app_id"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/et_app_id"/>
                <TextView
                    android:id="@+id/tv_app_secret"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/appSecret"
                    android:textSize="16sp"
                    android:textColor="@color/black_293040"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="@id/v_app_id"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/et_app_secret"
                    android:layout_width="236dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_app_secret"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:text="4b15fbce858f42489b7d5f2d75062047"
                    android:gravity="end"
                    android:textColor="@color/gray_717787"
                    android:background="@null"
                    android:textSize="16sp"/>
                <View
                    android:id="@+id/v_app_secret"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/et_app_secret"/>
                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/version"
                    android:textSize="16sp"
                    android:textColor="@color/black_293040"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="@id/v_app_secret"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    android:id="@+id/et_version"
                    android:layout_width="236dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_version"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:text="1.0.0.0"
                    android:gravity="end"
                    android:textColor="@color/gray_717787"
                    android:background="@null"
                    android:textSize="16sp"/>
                <View
                    android:id="@+id/v_version"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/et_version"/>
                <TextView
                    android:id="@+id/tv_uid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/uid"
                    android:textSize="16sp"
                    android:textColor="@color/black_293040"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="@id/v_version"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    android:id="@+id/et_uid"
                    android:layout_width="236dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_uid"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:text="huawei"
                    android:gravity="end"
                    android:textColor="@color/gray_717787"
                    android:background="@null"
                    android:textSize="16sp"/>
                <View
                    android:id="@+id/v_uid"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/et_uid"/>
                <TextView
                    android:id="@+id/tv_alias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alias"
                    android:textSize="16sp"
                    android:textColor="@color/black_293040"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="@id/v_uid"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    android:id="@+id/et_alias"
                    android:layout_width="236dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_alias"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:text="huawei"
                    android:gravity="end"
                    android:textColor="@color/gray_717787"
                    android:background="@null"
                    android:textSize="16sp"/>
                <View
                    android:id="@+id/v_alias"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/et_alias"/>
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone"
                    android:textSize="16sp"
                    android:textColor="@color/black_293040"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="@id/v_alias"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="236dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_phone"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:text="15881159870"
                    android:gravity="end"
                    android:textColor="@color/gray_717787"
                    android:background="@null"
                    android:textSize="16sp"/>
                <View
                    android:id="@+id/v_phone"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/et_phone"/>
                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/location"
                    android:textSize="16sp"
                    android:textColor="@color/black_293040"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="@id/v_phone"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    android:id="@+id/et_location"
                    android:layout_width="236dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_location"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="成都市"
                    android:gravity="end"
                    android:textColor="@color/gray_717787"
                    android:background="@null"
                    android:textSize="16sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tv_update"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/update_user_info"
        android:padding="15dp"
        android:gravity="center"
        android:background="@color/white"
        app:layout_constraintEnd_toStartOf="@id/tv_push"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black_293040"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/tv_push"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="@string/unconnected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_update"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@color/red_F79090"
        android:gravity="center"/>

    <View
        android:id="@+id/v_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintBottom_toTopOf="@id/tv_update"
        android:background="@color/line_color"/>
</androidx.constraintlayout.widget.ConstraintLayout>